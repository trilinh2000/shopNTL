            </li>
            <li>
                <div id="img">
                    <% items.forEach(function(image) { %>
                        <img id="img"
                            src="data:image/<%=image.productId.img.contentType%>;base64,
                                    <%=image.productId.img.data.toString('base64')%>"
                          />
