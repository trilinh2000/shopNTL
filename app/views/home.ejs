                </form>  
            </li>
        </ul>
        <div id="header2">
            <ul>
                <li>
                    <a href="http://localhost:3000/NTL.vn"><ion-icon name="home" id="home"></ion-icon></a>
                </li>
                <li>
                    <a href="http://localhost:3000/NTL.vn"><ion-icon name="tv"></ion-icon></a>
                </li>
                <li>
                    <a href="http://localhost:3000/NTL.vn"><ion-icon name="storefront-outline"></ion-icon></a>
                </li>
                <li>
                    <a href=""><ion-icon name="notifications"></ion-icon></a>
                </li>
                <li>
                    <a href="http://localhost:3000/NTL/store"><ion-icon name="cart-outline" id="cart-outline"></ion-icon></ion-icon></a>
                </li>
                
            </ul>
        </div>
        <div id="header3">
                <div id="header3-login">
                              <img id="img"
                              src="data:image/<%=items.img.contentType%>;base64,
                                      <%=items.img.data.toString('base64')%>"
                            />
                            <a href="http://localhost:3000/NTL/logout"><ion-icon name="enter"></ion-icon></a>
                        
                </div>
        </div>
    <div id="sidebar">
        <ul>
            <li>
                <div>
                    <a href="http://localhost:3000/NTL.vn"><img id="sidebar-img"
                        src="data:image/<%=items.img.contentType%>;base64,
                                <%=items.img.data.toString('base64')%>"/><% if(account){%><%=account.username%><%}%></a>
                </div>
                <div>

                </div>
                
                        
            </li>
            <li>
                <a href="">Book</a>
